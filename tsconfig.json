{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~components/*": ["components/*"],
      "~config/*": ["config/*"],
      "~constants/*": ["constants/*"],
      "~context/*": ["context/*"],
      "~hooks/*": ["hooks/*"],
      "~services/*": ["services/*"],
      "~utils/*": ["utils/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
